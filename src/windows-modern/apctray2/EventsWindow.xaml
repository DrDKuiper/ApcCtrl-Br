<Window x:Class="apctray2.EventsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Eventos do UPS" Height="400" Width="640"
        WindowStartupLocation="CenterScreen">
  <Grid Margin="8">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock Text="Eventos recentes (via NIS)" FontWeight="Bold"/>

    <ListBox x:Name="List" Grid.Row="1" FontFamily="Consolas"/>

    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Content="Atualizar" Click="Refresh_Click" Margin="0,0,8,0"/>
      <Button Content="Fechar" IsCancel="True"/>
    </StackPanel>
  </Grid>
</Window>
