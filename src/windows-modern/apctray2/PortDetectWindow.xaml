<Window x:Class="apctray2.PortDetectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detectar Nobreak (COM)" Height="340" Width="520"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E" Foreground="#E0E0E0">
  <Window.Resources>
    <Style x:Key="ModernButton" TargetType="Button">
      <Setter Property="Background" Value="#3E3E42"/>
      <Setter Property="Foreground" Value="#E0E0E0"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Padding" Value="12,6"/>
      <Setter Property="FontSize" Value="13"/>
      <Setter Property="Cursor" Value="Hand"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border Background="{TemplateBinding Background}"
                    CornerRadius="6"
                    Padding="{TemplateBinding Padding}">
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
      <Style.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
          <Setter Property="Background" Value="#505050"/>
        </Trigger>
      </Style.Triggers>
    </Style>
  </Window.Resources>

  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

  <TextBlock Text="Portas seriais detectadas:" FontWeight="Bold" Foreground="#E0E0E0"/>

  <ListView x:Name="PortsList" Grid.Row="1" Margin="0,8,0,8" SelectionMode="Single"
        Background="#252526" Foreground="#E0E0E0" BorderThickness="0">
      <ListView.View>
        <GridView>
          <GridViewColumn Header="Porta" Width="80" DisplayMemberBinding="{Binding Port}"/>
          <GridViewColumn Header="Nome" Width="320" DisplayMemberBinding="{Binding FriendlyName}"/>
          <GridViewColumn Header="Fabricante" Width="100" DisplayMemberBinding="{Binding Manufacturer}"/>
        </GridView>
      </ListView.View>
    </ListView>

    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Content="Atualizar" Click="Refresh_Click" Margin="0,0,8,0" Style="{StaticResource ModernButton}"/>
      <Button Content="Copiar sugestÃ£o" Click="CopySuggestion_Click" Margin="0,0,8,0" Style="{StaticResource ModernButton}"/>
      <Button Content="Fechar" IsCancel="True" Style="{StaticResource ModernButton}"/>
    </StackPanel>
  </Grid>
</Window>
