<Window x:Class="apctray2.PortDetectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detectar Nobreak (COM)" Height="340" Width="520"
        WindowStartupLocation="CenterScreen">
  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock Text="Portas seriais detectadas:" FontWeight="Bold"/>

    <ListView x:Name="PortsList" Grid.Row="1" Margin="0,8,0,8" SelectionMode="Single">
      <ListView.View>
        <GridView>
          <GridViewColumn Header="Porta" Width="80" DisplayMemberBinding="{Binding Port}"/>
          <GridViewColumn Header="Nome" Width="320" DisplayMemberBinding="{Binding FriendlyName}"/>
          <GridViewColumn Header="Fabricante" Width="100" DisplayMemberBinding="{Binding Manufacturer}"/>
        </GridView>
      </ListView.View>
    </ListView>

    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Content="Atualizar" Click="Refresh_Click" Margin="0,0,8,0"/>
      <Button Content="Copiar sugestÃ£o" Click="CopySuggestion_Click" Margin="0,0,8,0"/>
      <Button Content="Fechar" IsCancel="True"/>
    </StackPanel>
  </Grid>
</Window>
